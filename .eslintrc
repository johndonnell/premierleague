{
  "env": {
    "node": true
  },
  "parserOptions": {
   "ecmaVersion": 6
  },
  "rules": {
    "block-scoped-var": 2,
    "brace-style": [2, "1tbs"],
    "computed-property-spacing": [2, "never"],
    "curly": 2,
    "eol-last": 2,
    "eqeqeq": [2, "smart"],
    "max-depth": [1, 3],
    "max-len": [1, 250],
    "max-statements": [1, 15],
    "new-cap": 0,
    "no-extend-native": 2,
    "no-unused-vars": 1,
    "no-use-before-define": [2, "nofunc"],
    "keyword-spacing": [2, {"before": true, "after": true}],
    "space-unary-ops": 2
  }
}
